{block breadcrumbs}
<li>
  <span class="divider"></span>
  <a n:href="$presenter->action">{$presenter->name}</a>
</li>

{/block}

{block content}

<!-- RULES PAGE --> 

<script src="{$basePath}/js/rules/rules.js"></script>

<!-- SELECT RULE -->
<div class="row-fluid">
	<div class="box span12">
		<div class="box-header well">
			<h2><i class="icon-info-sign"></i> Select Rule</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>	
		<div class="box-content">
			<table class="table">	
				<thead>
					<tr>						
						<th>New Rule</th>
						<th>Existing Rule</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><input type="text" placeholder="Enter unique identifier"></td>
						<td>
							<select size="1">
								<option value="0" selected="selected">Select rule identifier</option>
								<option value="1">Rule ID 1</option>
								<option value="2">Rule ID 2</option>
								<option value="3">Rule ID 3</option>
							</select>
						</td>
					</tr>
				</tbody>
			</table> 
			<div class="clearfix"></div>
		</div>
	</div>
</div>


<!-- OVERVIEW -->
<div class="row-fluid">
	<div class="box span12">		
		<div class="box-header well">
			<h2><i class="icon-info-sign"></i> Overview</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<table class="table">
				<thead>
					<tr>
						<th>Natural Language Description</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><input type="text" class="span12"></td>
					</tr>
				</tbody>
			</table>
			<hr>
			<table class="table">	
				<thead>
					<tr>						
						<th>Rule Duration</th>
						<th>Rule Definition</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
							<select onChange="durationSelect(this)" id="dur" size="1">
								<option id="dur0" value="0" selected="selected">Select a Duration</option>
								<option id="dur1" value="1">All readings</option>
								<option id="dur2" value="2">All Readings After L</option>
								<option id="dur3" value="2">All Readings Before R</option>
								<option id="dur4" value="2">All Readings Between L and R</option>
							</select>
						</td>
						<td>
							<select onChange="definitionSelect(this)" size="1">
								<option id="def0" value="0" selected="selected">Select Rule Definition</option>
								<option id="def1" value="1">Universality</option>
								<option id="def2" value="2">Absence</option>
								<option id="def3" value="2">Existence</option>
								<option id="def4" value="2">Response</option>
							</select>
						</td>
					</tr>
				</tbody>
			</table> 		
		</div>
	</div>
</div>

<!-- BOUNDARIES -->
<div class="row-fluid">	

	<!-- LEFT BOUNDARY -->
	<div class="box span6">
		<div class="box-header well">
			<h2><i class="icon-info-sign"></i> Left Boundary</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<select name="left" size="1">
				<option value="0" selected="selected">Select Sensor</option>
				<option value="1">Registered Sensor 1</option>
				<option value="1">Registered Sensor 2</option>
				<option value="1">Registered Sensor 3</option>
			</select>
			<table class="table table-bordered">	
				<tbody>
					<tr>
						<td>Field 1</td>
						<td>Field 2</td>
						<td>Field 3</td>
						<td>Field 4</td>
					</tr>
				</tbody>
			</table> 
			<span>
				<button name="left" type="button" class="btn btn span1"&ge;</button>
				<button name="left" type="button" class="btn span1">&ne;</button>
				<button name="left" type="button" class="btn span1"><</button>
				<button name="left" type="button" class="btn span1">></button>
				<button name="left" type="button" class="btn span1">&ge;</button>
				<button name="left" type="button" class="btn span1">&le;</button>
				<button name="left" type="button" class="btn span2">OR</button>
				<button name="left" type="button" class="btn span2">AND</button>
				<button name="left" type="button" class="btn span2">NOT</button>
			</span>
			<div class="clearfix"></div>
			<br />
			<span>Left Boundary Sub-formula</span>
			<div>
				<input name="left" type="text" class="span12">
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	
	<!-- RIGHT BOUNDARY -->
	<div class="box span6">
		<div class="box-header well">
			<h2><i class="icon-info-sign"></i> Right Boundary</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<select name="right" size="1">
				<option value="0" selected="selected">Select Sensor</option>
				<option value="1">Registered Sensor 1</option>
				<option value="1">Registered Sensor 2</option>
				<option value="1">Registered Sensor 3</option>
			</select>
			
			<div class="clearfix"></div>

			<table class="table table-bordered">	
				<tbody>
					<tr>
						<td>Field 1</td>
						<td>Field 2</td>
						<td>Field 3</td>
						<td>Field 4</td>
					</tr>
				</tbody>
			</table> 
			<span>
				<button name="right" type="button" class="btn btn span1"&ge;</button>
				<button name="right" type="button" class="btn span1">&ne;</button>
				<button name="right" type="button" class="btn span1"><</button>
				<button name="right" type="button" class="btn span1">></button>
				<button name="right" type="button" class="btn span1">&ge;</button>
				<button name="right" type="button" class="btn span1">&le;</button>
				<button name="right" type="button" class="btn span2">OR</button>
				<button name="right" type="button" class="btn span2">AND</button>
				<button name="right" type="button" class="btn span2">NOT</button>
			</span>
			<div class="clearfix"></div>
			<br />
			<span>Right Boundary Sub-formula</span>
			<div>
				<input name="right" type="text" class="span12">
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
</div>

<!-- PREMISE AND BOOLEAN STATEMENT -->
<div class="row-fluid">	
	<!-- PREMISE -->
	<div class="box span6">
		<div class="box-header well">
			<h2><i class="icon-info-sign"></i> Premise</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<select name="premise" size="1">
				<option value="0" selected="selected">Select Sensor</option>
				<option value="1">Registered Sensor 1</option>
				<option value="1">Registered Sensor 2</option>
				<option value="1">Registered Sensor 3</option>
			</select>
			
			<div class="clearfix"></div>

			<table class="table table-bordered">	
				<tbody>
					<tr>
						<td>Field 1</td>
						<td>Field 2</td>
						<td>Field 3</td>
						<td>Field 4</td>
					</tr>
				</tbody>
			</table> 
			<span>
				<button name="premise" type="button" class="btn btn span1"&ge;</button>
				<button name="premise" type="button" class="btn span1">&ne;</button>
				<button name="premise" type="button" class="btn span1"><</button>
				<button name="premise" type="button" class="btn span1">></button>
				<button name="premise" type="button" class="btn span1">&ge;</button>
				<button name="premise" type="button" class="btn span1">&le;</button>
				<button name="premise" type="button" class="btn span2">OR</button>
				<button name="premise" type="button" class="btn span2">AND</button>
				<button name="premise" type="button" class="btn span2">NOT</button>
			</span>
			<div class="clearfix"></div>
			<br />
			<span>Premise Sub-formula</span>
			<div>
				<input name="premise" type="text" class="span12">
			</div>
			<div class="clearfix"></div>
		</div>
	</div>
	
	<!-- BOOLEAN STATEMENT -->
	<div class="box span6">
		<div class="box-header well">
			<h2><i class="icon-info-sign"></i> Boolean Statement</h2>
			<div class="box-icon">
				<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
			<select size="1">
				<option value="0" selected="selected">Select Sensor</option>
				<option value="1">Registered Sensor 1</option>
				<option value="1">Registered Sensor 2</option>
				<option value="1">Registered Sensor 3</option>
			</select>
			
			<div class="clearfix"></div>

			<table class="table table-bordered">	
				<tbody>
					<tr>
						<td>Field 1</td>
						<td>Field 2</td>
						<td>Field 3</td>
						<td>Field 4</td>
					</tr>
				</tbody>
			</table> 
			<span>
				<button type="button" class="btn btn span1"&ge;</button>
				<button type="button" class="btn span1">&ne;</button>
				<button type="button" class="btn span1"><</button>
				<button type="button" class="btn span1">></button>
				<button type="button" class="btn span1">&ge;</button>
				<button type="button" class="btn span1">&le;</button>
				<button type="button" class="btn span2">OR</button>
				<button type="button" class="btn span2">AND</button>
				<button type="button" class="btn span2">NOT</button>
			</span>
			<div class="clearfix"></div>
			<br />
			<span>Boolean Statement Sub-formula</span>
			<div>
				<input type="text" class="span12">
			</div>
		</div>
	</div>
</div>

<br />
<!-- Radiobutton and Submit -->
<div class="row-fluid">	
	<div class="pagination-centered">
		<label class="radio">
			<input class="input-large" type="radio" value="">Share the rule
		</label> <br /><br />
		<div>
			<button type="submit" class="btn btn-primary btn-group btn-large pull-center">Submit</button>
			<button type="button" class="btn btn-large btn-group pull-center">Clear</button>
		</div>
	</div>
</div>

{/block}
